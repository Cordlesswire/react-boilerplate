{
  "name": "react-boilerplate",
  "version": "1.0.0",
  "description": "Boilerplate for projects using ES2015 and React",
  "main": "index.js",
  "repository": {
    "type": "git",
    "url": "git://github.com/satya164/react-boilerplate.git"
  },
  "scripts": {
    "start": "if [ \"$NODE_ENV\" = \"production\" ]; then npm run start:prod; else npm run start:dev; fi",
    "start:watch": "babel-watch src/index",
    "start:dev": "babel-node src/index",
    "start:prod": "node build/index",
    "prestart:prod": "npm run build:server",
    "test": "jest",
    "flow": "flow",
    "lint": "eslint .",
    "flow:added": "git diff HEAD --cached --name-only --diff-filter=ACM | grep '.js$' > /dev/null || exit 0 && npm run flow",
    "lint:added": "git diff HEAD --cached --name-only --diff-filter=ACM | grep '.js$' | xargs eslint",
    "build": "npm run build:server && npm run build:client",
    "build:server": "babel --source-maps --ignore **/__tests__/** --out-dir build/ src/",
    "build:client": "webpack",
    "prebuild:client": "npm run clean:client",
    "prebuild:server": "npm run clean:server",
    "clean:server": "rm -rf build",
    "clean:client": "rm -rf dist",
    "clean": "npm run clean:server && npm run clean:client"
  },
  "author": "Satyajit Sahoo <satyajit.happy@gmail.com> (https://github.com/satya164/)",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-eslint": "^7.1.1",
    "babel-jest": "^18.0.0",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-react-constant-elements": "^6.22.0",
    "babel-plugin-transform-react-inline-elements": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-es2015-native-modules": "^6.9.4",
    "babel-preset-react": "^6.22.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-1": "^6.22.0",
    "babel-watch": "^2.0.5",
    "eslint": "^3.13.1",
    "eslint-import-resolver-webpack": "^0.8.1",
    "eslint-loader": "^1.6.1",
    "eslint-plugin-babel": "^4.0.1",
    "eslint-plugin-flowtype": "^2.30.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-react": "^6.9.0",
    "flow-bin": "^0.38.0",
    "jest-cli": "^18.1.0",
    "json-loader": "^0.5.4",
    "react-addons-test-utils": "^15.4.2",
    "redux-devtools": "^3.3.2",
    "redux-devtools-dock-monitor": "^1.1.1",
    "redux-devtools-log-monitor": "^1.2.0",
    "webpack": "^2.1.0-beta.5"
  },
  "dependencies": {
    "babel-polyfill": "^6.22.0",
    "babel-register": "^6.22.0",
    "babel-runtime": "^6.22.0",
    "koa": "^1.2.4",
    "koa-mount": "^1.3.0",
    "koa-route": "^2.4.2",
    "koa-static": "^2.0.0",
    "koa-webpack-dev-middleware": "^1.3.0",
    "koa-webpack-hot-middleware": "^1.0.3",
    "radium": "^0.18.1",
    "react": "^15.4.2",
    "react-dom": "^15.4.2",
    "react-redux": "^5.0.2",
    "redux": "^3.6.0",
    "redux-thunk": "^2.2.0"
  }
}
